<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name"
        android:textSize="@dimen/main_page_name1"
        android:textColor="@color/main_page_name_color"
        android:text="@string/main_page_out_PM"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:shadowColor="#ff0d0103"
        android:shadowDx="5"
        android:shadowDy="10"
        android:shadowRadius="15"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="25dp"
            android:id="@+id/tv_date"
            android:text="158"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="@dimen/main_page_date1"
            android:layout_width="match_parent"
            android:shadowColor="#ff0d0103"
            android:shadowRadius="20"
            android:shadowDx="5"
            android:shadowDy="15"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"

            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="25dp"
            android:id="@+id/tv_company"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="-30dp"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:shadowColor="#ff0d0103"
            android:shadowRadius="20"
            android:shadowDx="5"
            android:shadowDy="15"
            android:layout_height="wrap_content" />
    </LinearLayout>



    <ImageButton
        android:layout_marginTop="35dp"
        android:layout_marginBottom="18dp"
        android:visibility="gone"
        android:id="@+id/ib_config_net"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_peiwang"/>

    <TextView
        android:layout_marginTop="25dp"

        android:id="@+id/tv_info"
        android:text="@string/main_page_config_net"
        android:clickable="true"
        android:textSize="@dimen/main_page_info1"
        android:textColor="@color/main_page_name_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</LinearLayout>