<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="424dp"
    android:layout_height="208dp"
    android:orientation="horizontal"
    android:weightSum="100">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="39"
        android:background="@drawable/left_conrner_shape"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/tanc_icon_gengx" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="61"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/iv_exit"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:layout_marginRight="4dp"
            android:background="@null"
            android:src="@mipmap/btn_guanbi1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-17dp"
            android:text="@string/dialog_new_version"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dialog_new_version" />

        <TextView
            android:id="@+id/tv_newversoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=""
            android:textColor="@color/dialog_detect_updata"
            android:textSize="@dimen/dialog_versino_code" />

        <ScrollView
            android:layout_width="202dp"
            android:layout_height="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_version_tip"
                    android:layout_width="wrap_content"
                    android:textColor="@color/dialog_detect_updata"

                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dialog_versino_code" />

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="15dp"
            android:textSize="16sp"
            android:textColor="@color/color_ffffff"
            android:background="@drawable/selector_btn_black"
            android:text="@string/dialog_updata" />
    </LinearLayout>


</LinearLayout>